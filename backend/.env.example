# Environment Configuration for Smart ATM System
# Copy this file to .env and fill in your actual values

# Flask Security Keys (Generate random strings for production)
SECRET_KEY=your-secret-key-change-me
JWT_SECRET_KEY=your-jwt-secret-key-change-me

# Root User Configuration
ROOT_USER_NAME=Devraj
ROOT_USER_EMAIL=your-email@example.com
ROOT_USER_PASSWORD=your-secure-password

# Email Configuration (Optional - for email verification)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Database Configuration
DATABASE_URI=sqlite:///smart_atm.db
